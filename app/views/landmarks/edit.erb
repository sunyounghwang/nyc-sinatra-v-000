<h2>Edit Historical Landmark</h2>

<h3><%= @landmark.name %> - <%= @landmark.year_completed %></h3>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Landmark Name</label><input id="name" type="text" name="landmark[name]">
  <label>Year Completed</label><input id="year_completed" type="text" name="landmark[year_completed]">
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
